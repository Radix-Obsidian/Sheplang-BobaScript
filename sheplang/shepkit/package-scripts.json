{
  "scripts": {
    "verify": {
      "description": "Verify ShepKit build and functionality",
      "script": "pnpm typecheck && pnpm build && echo 'ShepKit verification complete'"
    },
    "dev:full": {
      "description": "Start development with Supabase",
      "script": "supabase start && pnpm dev"
    },
    "setup": {
      "description": "Initial setup for ShepKit",
      "script": "pnpm install && cp .env.local.example .env.local && echo 'Setup complete. Edit .env.local with your API keys.'"
    },
    "db:reset": {
      "description": "Reset local database",
      "script": "supabase db reset"
    },
    "db:migrate": {
      "description": "Apply database migrations",
      "script": "supabase db push"
    }
  }
}
