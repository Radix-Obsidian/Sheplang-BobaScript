{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": false,
    "composite": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": false
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "lib", "node_modules", "test"]
}
