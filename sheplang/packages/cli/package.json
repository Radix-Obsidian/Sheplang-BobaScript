{
  "name": "sheplang",
  "version": "0.1.3",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": { "sheplang": "dist/index.js" },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "vitest run --dir .",
    "dev": "node --enable-source-maps dist/commands/dev.js",
    "test:e2e": "node test/e2e/run-e2e.mjs",
    "test:snapshots": "node test/snapshots/snapshot-test.mjs",
    "test:all": "node test/e2e/e2e-runner.js",
    "test:ci": "node test/e2e/e2e-runner.js --ci",
    "format": "prettier -w \"**/*.{ts,js,md,json}\"",
    "lint": "eslint .",
    "stats": "node --enable-source-maps dist/commands/stats.js"
  },
  "dependencies": {
    "@adapters/sheplang-to-boba": "workspace:*",
    "@sheplang/language": "workspace:*",
    "@sheplang/compiler": "workspace:*",
    "chokidar": "^3.6.0",
    "express": "^4.19.2",
    "ws": "^8.18.0",
    "kleur": "^4.1.5",
    "execa": "^8.0.1",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3",
    "eslint": "^9.0.0",
    "prettier": "^3.1.0"
  }
}
